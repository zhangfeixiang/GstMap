/* pages/spacetime-photo/index.wxss */
.list {
    padding: 32rpx;
    display: flex;
    flex-wrap: wrap;
}

.item {
    width: calc(50% - 12rpx);
    margin-bottom: 24rpx;
    position: relative;
    margin-right: 24rpx;
}

.item:nth-child(even) {
    margin-right: 0;
}

.item .cover {
    width: 100%;
    height: 445rpx;
    border-radius: 28rpx;
    display: block;
}

.item .title {
    font-size: 30rpx;
    color: #fff;
    font-weight: bold;
}

.item .sub-tit {
    color: #fff;
    font-size: 26rpx;
}

.item .mask {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background-image: linear-gradient(180deg, rgba(0, 0, 0, .1), rgba(0, 0, 0, .6));
    padding: 30rpx 40rpx;
    border-radius: 28rpx;
    box-sizing: border-box;
}