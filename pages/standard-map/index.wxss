/* pages/standard-map/index.wxss */
page {
    background: #f5f9fc;
}

.searchbar {
    padding: 20rpx;
    position: sticky;
    top: 0;
    background: #fff;
    z-index: 10;
}

.filterbar .scroll-view {
    width: 100%;
    white-space: nowrap;
}

.filter-item {
    display: inline-block;
    margin: 0 20rpx;
    color: #262626;
    padding: 10rpx 20rpx;
}

.filterbar .filter-item.active {
    border-radius: 30rpx;
    background: #5197F7;
    color: #fff;
}

.list {
    padding: 32rpx;
    display: flex;
    flex-wrap: wrap;
}

.item {
    width: calc(50vw - 44rpx);
    margin-bottom: 24rpx;
    position: relative;
    margin-right: 24rpx;
}

.item:nth-child(even) {
    margin-right: 0;
}


.image-view {
    border: 2rpx solid #333;
    position: relative;
    height: calc(50vw - 44rpx);
    border-radius: 28rpx;
    overflow: hidden;
}

.cover {
    width: 100%;
    height: 100%;
    border-radius: 28rpx;
    display: block;
}


.mask {
    position: absolute;
    background: rgba(0, 0, 0, .4);
    color: #fff;
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    box-sizing: border-box;
}



.mask {
    bottom: 0rpx;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}


.visit {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    background-color: rgba(0, 0, 0, .5);
    padding: 2rpx 10rpx;
    color: #fff;
    font-size: 24rpx;
    border-radius: 8rpx;
}

.title {
    margin-top: 10rpx;
    text-align: center;
}