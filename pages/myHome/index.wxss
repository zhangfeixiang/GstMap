.content {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.content .top-panel {
    height: 400rpx;
    background: linear-gradient(to right, #434DE8, #1895FA);
    display: flex;
    flex-direction: column;
    align-items: center;
}

.content .top-panel .header-img {
    margin-top: 40rpx;
}

.content .top-panel .header-name {
    font-size: 40rpx;
    color: #fff;
    font-weight: 450;
}

.content .top-panel .btn-box {
    margin-top: 20rpx;
    display: flex;
    justify-content: center;
}

.content .top-panel .btn-box .btn-item {
    margin: 0 10rpx;
    --button-mini-min-width: 130rpx
}

.content .top-panel .btn-box .u-button {
    margin: 0 20rpx;
}

.content .bottom-panel {
    flex: 1;
    width: 100%;
    margin-top: 20rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.content .bottom-panel .list {
    padding: 30rpx 40rpx 20rpx 20rpx;

    background: #fff;
    border-radius: 30rpx;
    overflow: hidden;
    box-shadow: 0px 20rpx 20rpx 10rpx rgba(0, 0, 0, 0.06);
    /* x偏移量, y偏移量, 模糊半径, 扩展半径, 阴影颜色 */

}