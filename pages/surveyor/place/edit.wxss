/* pages/surveyor/place.wxss */
page {
    --field-label-color: #323233;
    --radio-label-margin: 10rpx;
    background: #f5f9fc;
}

.page {
    padding: 20rpx;
}


.center {
    display: flex;
    justify-content: center;
    padding-bottom: 100rpx;
}

.flex {
    display: flex;
    align-items: center;
}

.location-item {
    display: flex;
    align-items: center;
    height: 96rpx;
    margin: 0 32rpx;
    border-bottom: 1rpx solid #F2F3F4;
}


.location-item .field {
    display: flex;
    align-items: center;
    position: relative;
}

.field-label {
    width: 100rpx;
}

.required:before {
    color: var(--cell-required-color, #ee0a24);
    content: "*";
    font-size: var(--cell-font-size, 14px);
    left: var(--padding-xs, -16rpx);
    position: absolute;
}

.field-input {
    margin-left: 10rpx;
    flex: 1;
}

.location-shape {
    position: relative;
    width: 100rpx;
    height: 100rpx;
}

.location-shape.start {
    background: url('https://static.zc0901.com/zfx/gst-map/start.png') no-repeat center center;
    background-size: 100% auto;
}

.location-shape.end {
    background: url('https://static.zc0901.com/zfx/gst-map/end.png') no-repeat center center;
    background-size: 100% auto;
}


.card {
    border-radius: 18rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    background: #fff;
}

.indent {
    padding-left: 32rpx;
}

.align-right {
    display: flex;
    justify-content: flex-end;
    width: 100%;
}

.fs36 {
    font-size: 36rpx;
    --cell-font-size: 36rpx;
}

.submit-button {
    width: 100%;
}