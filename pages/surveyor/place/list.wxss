/* pages/surveyor/tourismPanel/list.wxss */
page {
    background: #f5f9fc;
}

.page {
    padding: 32rpx;
}

.map {
    display: flex;
    justify-content: flex-end;
    box-sizing: border-box;
    padding: 32rpx;
    width: 40rpx;
}

.custom-title {
    display: flex;
}

.card {
    border-radius: 18rpx;
    overflow: hidden;
    margin-bottom: 20rpx;
    background: #fff;
    --cell-label-margin-top: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.card .index {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #4fc08d;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    margin-left: 20rpx;
}

.item-name {
    max-width: 70%;
    font-size: 32rpx;
    font-weight: bold;
    margin-right: 20rpx;
}